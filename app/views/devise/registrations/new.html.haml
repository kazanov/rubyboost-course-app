.register-box
  .register-box-body
    %h2.login-box-msg Sign Up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      .form-inputs
        .form-group.has-feedback
          = f.input :email, required: true, autofocus: true, placeholder: 'Enter email'
          %span.glyphicon.glyphicon-envelope.form-control-feedback
        .form-group.has-feedback
          = f.input :password, required: true, placeholder: 'Enter password',
                               hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
          %span.glyphicon.glyphicon-lock.form-control-feedback
        .form-group.has-feedback
          = f.input :password_confirmation, required: true, placeholder: 'Confirm password'
          %span.glyphicon.glyphicon-log-in.form-control-feedback
        .row
          .col-xs-4
            %button.btn.btn-primary.btn-block.btn-flat{:type => "submit"} Sign Up
          / /.col
    .social-auth-links.text-center
      %p - OR -
      %a.btn.btn-block.btn-social.btn-facebook.btn-flat{:href => "#"}
        %i.fa.fa-facebook
        Sign up using Facebook
      %a.btn.btn-block.btn-social.btn-google.btn-flat{:href => "#"}
        %i.fa.fa-google-plus
        Sign up using Google+
    %a.text-center
      = link_to 'I already have a membership', new_user_session_path
