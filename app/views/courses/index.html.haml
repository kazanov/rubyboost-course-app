%h2 Rubyboost
.row
  - if @courses.present?
    - @courses.each do |course|
      .col-md-4
        .panel.panel-default
          .panel-heading
            %strong= course.title
            <br>
            = course.user.first_name 
            = course.user.last_name
          .panel-body
            = image_tag course.picture.thumb, class: 'img-responsive center-block'
          .panel-footer
            = course.description
            = link_to 'Participants', course_participants_path(course)
    = paginate @courses, window: 2
  - else
    %h2 No courses yet.
